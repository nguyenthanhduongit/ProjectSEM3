@using ProjectSEM3.DAL.Models.Entity
@using ProjectSEM3.Controllers
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Banned> banner = HomeController.GetlistBanned();
    List<Product> lstPro = HomeController.GetListProduct();
    List<Product> lstProNew = HomeController.GetStatusProductNew();
    List<Product> lstProSeller = HomeController.GetStatusProductSeller();
    List<Product> lstProRecently = HomeController.GetStatusProductRecently();
}



<div class="slider-area">
    <!-- Slider -->
    <div class="block-slider block-slider4">
        <ul class="" id="bxslider-home4">
            @foreach (var item in banner)
